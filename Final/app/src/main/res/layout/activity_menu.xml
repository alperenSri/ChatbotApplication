<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:id="@+id/layoutRoot">

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/show_hidden"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_add_photo_alternate_36"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
    <Button
        android:id="@+id/Move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:text="@string/menu_text"
        style="@style/TEXT"/>

    <TextView
        android:textColor="#673AB7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:padding="8dp"
        android:text="@string/dark_mode"/>
    <Switch
        android:id="@+id/switcher"
        android:layout_width="56dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="233dp">
        <Switch
            android:id="@+id/Language"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>
        <TextView
            android:id="@+id/switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/switch_language"
            android:textColor="#673AB7"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hidden_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/background_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/options_text"
            android:textColor="#673AB7"/>

        <Button
            android:id="@+id/buttonChangeBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_corners"
            android:text="1"
            android:textSize="14sp"
            android:padding="4dp"/>
        <Button
            android:id="@+id/buttonChangeBackground2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_corners"
            android:layout_toEndOf="@id/buttonChangeBackground"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="2"
            android:textSize="14sp"
            android:padding="4dp"/>

        <Button
            android:id="@+id/buttonChangeBackground3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/buttonChangeBackground2"
            android:background="@drawable/button_corners"
            android:text="3"
            android:textSize="14sp"
            android:padding="4dp"/>
    </RelativeLayout>

</RelativeLayout>